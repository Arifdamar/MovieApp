@model MovieCategoryModel
<div class="row">
    <div class="col-md-3">
        <partial name="_menu" model="@Model.Categories"/>
    </div>
    <div class="col-md-9">
        <div class="card mb-3">

            <div class="card-body">
                <div class="row no-gutter">

                    <div class="col-md-4">
                        <img src="~/img/@Model.Movie.ImageUrl" alt="@Model.Movie.Name" class="card-img">
                    </div>
                    <div class="col-md-8">
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.Movie.Id">
                            <h5 class="card-title">
                                @Model.Movie.Name
                            </h5>
                        </a>
                        <p class="card-text">
                            @Model.Movie.Description
                        </p>
                        <p class="card-text">3 days ago</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>