@model IEnumerable<Category>

<div class="list-group">
    <a href="/Home/Index" class="list-group-item list-group-item-action">
        All Movies
    </a>
</div>

<div class="list-group">
    @foreach (var category in Model)
    {
     <a asp-controller="Home" asp-action="Index" asp-route-id="@category.Id" 
     class="list-group-item list-group-item-action">@category.Name</a>   
    }
</div>